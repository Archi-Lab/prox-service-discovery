node {
    stage('Build') {
        docker.image('openjdk:8u212-alpine').inside {
            git url: 'https://github.com/Archi-Lab/prox-service-discovery.git'
            git branch: 'jenkins-migration'

            writeFile file: 'settings.xml', text: "<settings><localRepository>${pwd()}/.m2</localRepository></settings>"
            sh 'mvn -B -s settings.xml clean deploy'
        }
    }
    stage('Deploy') {
        docker.withServer('tcp://10.10.10.41:2376', 'prox-prod-certs') {
            docker.withRegistry('https://docker.nexus.archi-lab.io', 'archilab-nexus-jenkins') {
                pom = readMavenPom()
                image = pom.getArtifactId()
                tag = pom.getVersion()
                echo "${USER}"
                echo "${image}:${tag}"
                sh "docker stack deploy -c src/main/docker/docker-compose.yml ${image}"
            }
        }
    }
}
